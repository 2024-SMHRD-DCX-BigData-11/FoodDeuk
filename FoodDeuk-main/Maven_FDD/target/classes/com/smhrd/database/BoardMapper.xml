<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.database.BoardMapper">
  	<insert id="insertBoard" parameterType="Board">
  		insert into t_review values(num_board.nextval, #{res_no},#{user_no},#{review_content},#{ratings},sysdate)
  	</insert>
  	<select id="showBoard" resultType="Board">
  		select * from t_review
  	</select>
     <select id="detailBoard" resultType="Board">
     	select * from t_review where num=#{num}
     </select>
</mapper>