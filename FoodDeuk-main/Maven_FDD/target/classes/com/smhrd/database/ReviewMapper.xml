<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.database.ReviewMapper">
  	<insert id="insertReview" parameterType="Review">
  		insert into t_review values(t_review_SEQ.nextval, #{res_no},#{user_no},#{filename},#{review_content},#{ratings},sysdate)
  	</insert>
  	<select id="showReview" resultType="Review">
        <![CDATA[
  		SELECT * FROM (SELECT * rnum FROM t_review a ORDER BY review_no DESC) WHERE RNOWNUM <= 20
        ]]>
  	</select>
     <select id="detailReview" resultType="Review">
     	select * from t_review where res_no=#{res_no} order by r_date desc
     </select>
</mapper>