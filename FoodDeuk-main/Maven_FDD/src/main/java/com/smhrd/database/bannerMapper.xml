<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.database.BannerMapper">
    <select id="selectBannerData" resultType="com.smhrd.model.Banner">
        SELECT r.res_img, r.res_name, m.menu_name, m.price
        FROM t_restaurants r
        JOIN t_menu m ON r.res_no = m.res_no
    </select>
</mapper>